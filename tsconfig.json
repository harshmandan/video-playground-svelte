{
	"compilerOptions": {
		"baseUrl": ".",
		"module": "ESNext",
		"types": ["svelte", "node"],
		"moduleResolution": "node",
		"paths": {
			"$app/*": [".svelte/dev/runtime/app/*", ".svelte/build/runtime/app/*"],
			"$src/*": ["src/*"],
			"$assets/*": ["src/assets/*"],
			"$components/*": ["src/components/*"],
			"$stores/*": ["src/stores/*"],
			"$utils/*": ["src/utils/*"],
		}
	},
	"include": ["src/**/*.d.ts", "src/**/*.js", "src/**/*.ts", "src/**/*.svelte"]
}
